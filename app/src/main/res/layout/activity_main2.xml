<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/button4"
            android:layout_width="60sp"
            android:layout_height="0dp"
            android:layout_marginStart="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="15sp"
            android:backgroundTint="@color/main_color1"
            android:text="✕"
            android:textColor="@color/text"
            android:elevation="10dp"
            android:layout_weight="7.5"
            />
        <ScrollView
            android:id="@+id/ScrollView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/button4"
            android:layout_weight="80"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:orientation="vertical"
                    android:layout_margin="15sp"
                    android:layout_below="@+id/button4"
                    android:background="@drawable/button_background"
                    android:elevation="10dp">


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15sp"
                        android:layout_marginTop="10sp"
                        android:text="Куда?"
                        android:textColor="@color/text"
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/editTextText2"
                        android:layout_width="300sp"
                        android:layout_height="50sp"
                        android:layout_marginLeft="15sp"
                        android:layout_marginTop="7sp"
                        android:background="@drawable/edit_text_border"
                        android:inputType="text"
                        android:hint="Поиск направлений..."
                        android:textAlignment="center"
                        android:textColor="@color/text" />
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layoutb1"
                                android:layout_width="75sp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/button_background2"
                                android:elevation="10sp"/>
                            <LinearLayout
                                android:id="@+id/layoutb2"
                                android:layout_width="75sp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/button_background2"
                                android:elevation="10sp"/>
                            <LinearLayout
                                android:id="@+id/layoutb3"
                                android:layout_width="75sp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/button_background2"
                                android:elevation="10sp"/>
                            <LinearLayout
                                android:id="@+id/layoutb4"
                                android:layout_width="75sp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/button_background2"
                                android:elevation="10sp"/>
                            <LinearLayout
                                android:id="@+id/layoutb5"
                                android:layout_width="75sp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_margin="10sp"
                                android:background="@drawable/button_background2"
                                android:elevation="10sp"/>



                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout1"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/button_background"
                    android:orientation="vertical"
                    android:elevation="10dp">
                    <LinearLayout
                        android:id="@+id/layout5"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="15sp"
                            android:layout_weight="1"
                            android:text="Когда?"
                            android:gravity="center_vertical"
                            android:layout_marginStart="15sp"
                            android:textColor="@color/text"/>
                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="@color/text"
                            android:layout_marginEnd="15sp"/>
                    </LinearLayout>
                    <CalendarView
                        android:id="@+id/calendarView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/layout5"
                        tools:visibility="gone" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout2"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/button_background"
                    android:orientation="vertical"
                    android:elevation="10dp">


                    <LinearLayout
                        android:id="@+id/layout8"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="15sp"
                            android:layout_weight="1"
                            android:text="Кто?"
                            android:textColor="@color/text"
                            android:gravity="center_vertical"
                            android:layout_marginStart="15sp"/>
                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="@color/text"
                            android:layout_marginEnd="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <LinearLayout
                            android:id="@+id/layout6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10sp"
                                android:text="@string/parents"
                                android:textColor="@color/text"
                                android:layout_weight="1"/>
                            <LinearLayout
                                android:id="@+id/layoutc1"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_marginHorizontal="7sp"
                                android:layout_marginVertical="10sp"
                                android:orientation="horizontal"
                                android:background="@drawable/button_background5"
                                >
                                <TextView
                                    android:id="@+id/text3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="-"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/gray"
                                    />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text"
                                android:text="0" />
                            <LinearLayout
                                android:id="@+id/layoutc2"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_marginHorizontal="7sp"
                                android:layout_marginVertical="10sp"
                                android:orientation="horizontal"
                                android:background="@drawable/button_background4"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="+"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/text"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/parents1"
                                android:textColor="@color/text"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1"/>

                            <LinearLayout
                                android:id="@+id/layoutc3"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_marginHorizontal="7sp"
                                android:layout_marginVertical="10sp"
                                android:orientation="horizontal"
                                android:background="@drawable/button_background5"
                                >
                                <TextView
                                    android:id="@+id/text4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="-"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/gray"
                                    />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/count_of_guests1"
                                android:textColor="@color/text"
                                />
                            <LinearLayout
                                android:id="@+id/layoutc4"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_marginHorizontal="7sp"
                                android:layout_marginVertical="10sp"
                                android:orientation="horizontal"
                                android:background="@drawable/button_background4"
                                >
                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="+"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:textColor="@color/text"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/ScrollView1"
            android:orientation="horizontal"
            android:layout_weight="11"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:text="Очистить" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout9"
                android:layout_width="100sp"
                android:layout_height="45sp"
                android:background="@drawable/button_background6"
                android:layout_marginRight="30sp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    app:srcCompat="@drawable/baseline_search1_24" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/main_color1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="Поиск" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>